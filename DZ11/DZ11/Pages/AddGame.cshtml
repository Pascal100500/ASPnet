@page
@model AddGameModel
@{
    ViewData["Title"] = "Добавить игру";
}

<h2>Добавление игры</h2>

<div class="form-container">
    <form method="post" asp-antiforgery="true">

        <div class="form-group">
            <label asp-for="Game.Name"></label>
            <input asp-for="Game.Name" />
            <span asp-validation-for="Game.Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.Price"></label>
            <input asp-for="Game.Price" />
            <span asp-validation-for="Game.Price"></span>
        </div>

        <div class="form-group">
            <label asp-for="Game.Description"></label>
            <textarea asp-for="Game.Description"></textarea>
            <span asp-validation-for="Game.Description"></span>
        </div>

        <div class="form-group checkbox-group">
            <input asp-for="Game.IsPaid" />
            <label asp-for="Game.IsPaid">Платная игра</label>
        </div>

        <div class="form-group">
            <label>Возрастное ограничение</label><br />
            <input type="radio" asp-for="Game.AgeLimit" value="6" /> 6+
            <input type="radio" asp-for="Game.AgeLimit" value="12" /> 12+
            <input type="radio" asp-for="Game.AgeLimit" value="18" /> 18+
        </div>

        <button type="submit" class="btn-submit">Добавить игру</button>

    </form>
</div>
