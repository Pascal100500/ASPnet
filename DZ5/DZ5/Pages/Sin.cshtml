@page
@model DZ5.Pages.SinModel
@{
}
<h2>Синус</h2>

<form method="post">
    <p>
        <label>Введите число (в радианах):</label><br />
        <input type="number" step="any" name="X" />
    </p>
    <button type="submit">Посчитать</button>
</form>

@if (Request.Method == "POST")
{
    <h3>Результат:</h3>
    <p>sin(@Model.X) = @Model.Result</p>
}

<a href="/">На главную</a>
